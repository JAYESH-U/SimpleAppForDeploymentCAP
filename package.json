{
  "name": "simpleProjectForDeployment",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-ui_customers": "cds watch --open ibm.sap.ux.training.uicustomers/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa",
        "db": "hana"
      },
      "[development]": {
        "auth": {
          "kind": "basic",
          "users": {
            "Viewer": {
              "password": "Viewer@123",
              "roles": [
                "CustomerViewer"
              ],
              "attr": {}
            },
            "Manager": {
              "password": "Manager@123",
              "roles": [
                "CustomerManager"
              ],
              "attr": {}
            }
          }
        }
      },
      "destinations": true,
      "html5-repo": true,
      "workzone": true
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/ui_customers",
    "app/ui_customers"
  ]
}
